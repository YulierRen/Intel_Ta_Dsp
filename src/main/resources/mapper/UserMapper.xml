<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lty.www.intel_ta_dsp.mapper.UserMapper">
    <!--查询:所有用户-->
    <select id="findAll" resultType="com.lty.www.intel_ta_dsp.entity.User">
        SELECT * FROM user
    </select>

    <!-- 查询：根据用户名查找用户 -->
    <select id="findByUsername" resultType="com.lty.www.intel_ta_dsp.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <!-- 插入：新增用户 -->
    <insert id="insertUser" parameterType="com.lty.www.intel_ta_dsp.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, role)
        VALUES (#{username}, #{password}, #{role})
    </insert>

    <!-- 修改密码：根据用户对象 -->
    <update id="changePassword" parameterType="com.lty.www.intel_ta_dsp.entity.User">
        UPDATE user
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <!-- 修改用户名：根据用户对象 -->
    <update id="changeUsername" parameterType="com.lty.www.intel_ta_dsp.entity.User">
        UPDATE user
        SET username = #{username}
        WHERE id = #{id}
    </update>

    <!-- 修改角色：根据用户对象 -->
    <update id="changeRole" parameterType="com.lty.www.intel_ta_dsp.entity.User">
        UPDATE user
        SET role = #{role}
        WHERE id = #{id}
    </update>

    <!-- 删除：根据用户对象 -->
    <delete id="dropUser" parameterType="com.lty.www.intel_ta_dsp.entity.User">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!-- 删除：根据用户ID -->
    <delete id="dropUserById" parameterType="long">
        DELETE FROM user WHERE id = #{userId}
    </delete>

</mapper>
