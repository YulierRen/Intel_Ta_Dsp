<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lty.www.intel_ta_dsp.mapper.ScheduleMapper">

    <resultMap id="ScheduleResultMap" type="com.lty.www.intel_ta_dsp.entity.Schedule">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="title" column="title" />
        <result property="description" column="description" />
        <result property="startTime" column="start_time" />
        <result property="endTime" column="end_time" />
        <result property="location" column="location" />
        <result property="isCompleted" column="is_completed" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 查询：根据 ID -->
    <select id="findById" resultMap="ScheduleResultMap">
        SELECT * FROM schedule WHERE id = #{id}
    </select>

    <!-- 查询：根据用户 ID -->
    <select id="findByUserId" resultMap="ScheduleResultMap">
        SELECT * FROM schedule WHERE user_id = #{userId}
    </select>

    <!-- 插入 -->
    <insert id="insertSchedule" parameterType="com.lty.www.intel_ta_dsp.entity.Schedule" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO schedule (
            user_id, title, description, start_time, end_time, location, is_completed
        ) VALUES (
                     #{userId}, #{title}, #{description}, #{startTime}, #{endTime}, #{location}, #{isCompleted}
                 )
    </insert>

    <!-- 更新 -->
    <update id="updateSchedule" parameterType="com.lty.www.intel_ta_dsp.entity.Schedule">
        UPDATE schedule
        SET
            title = #{title},
            description = #{description},
            start_time = #{startTime},
            end_time = #{endTime},
            location = #{location},
            is_completed = #{isCompleted},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteSchedule" parameterType="long">
        DELETE FROM schedule WHERE id = #{id}
    </delete>

    <select id="findFromStartToEnd" parameterType="com.lty.www.intel_ta_dsp.dto.aidto.ScheduleGenerateDTO" resultType="com.lty.www.intel_ta_dsp.entity.Schedule">
        SELECT
            id,
            user_id AS userId,
            title,
            description,
            start_time AS startTime,
            end_time AS endTime,
            location,
            is_completed AS isCompleted,
            created_at AS createdAt,
            updated_at AS updatedAt
        FROM schedule
        WHERE user_id = #{userId}
          AND (
            (start_time &lt;= #{endTime} AND end_time &gt;= #{startTime})
            )
        ORDER BY start_time ASC
    </select>



</mapper>
