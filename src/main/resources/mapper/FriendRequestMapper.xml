<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lty.www.intel_ta_dsp.mapper.FriendRequestMapper">

    <insert id="addFriendRequest" parameterType="com.lty.www.intel_ta_dsp.entity.FriendRequest">
        INSERT INTO friend_request (sender_id, receiver_id, created_at)
        VALUES (#{senderId}, #{receiverId}, NOW())
    </insert>

</mapper>
